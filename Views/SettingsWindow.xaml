<Window x:Class="CommunicationApp.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ayarlar" Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Sunucu ve Veritabanı Ayarları" 
                  FontSize="18" FontWeight="Bold" 
                  Margin="0,0,0,20"/>

        <TabControl Grid.Row="1">
            <TabItem Header="Sunucu Ayarları">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Sunucu IP Adresi:" Margin="0,10,0,5" FontWeight="Bold"/>
                    <TextBox x:Name="ServerIpTextBox" Grid.Row="1" Margin="0,0,0,15" Height="30" Padding="5"/>

                    <TextBlock Grid.Row="2" Text="Sunucu Port:" Margin="0,10,0,5" FontWeight="Bold"/>
                    <TextBox x:Name="ServerPortTextBox" Grid.Row="3" Margin="0,0,0,15" Height="30" Padding="5"/>
                </Grid>
            </TabItem>

            <TabItem Header="Veritabanı Ayarları">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Sunucu:" Margin="0,10,0,5" FontWeight="Bold"/>
                    <TextBox x:Name="DbServerTextBox" Grid.Row="1" Margin="0,0,0,15" Height="30" Padding="5"/>

                    <TextBlock Grid.Row="2" Text="Veritabanı Adı:" Margin="0,10,0,5" FontWeight="Bold"/>
                    <TextBox x:Name="DbNameTextBox" Grid.Row="3" Margin="0,0,0,15" Height="30" Padding="5"/>

                    <TextBlock Grid.Row="4" Text="Kullanıcı Adı:" Margin="0,10,0,5" FontWeight="Bold"/>
                    <TextBox x:Name="DbUserIdTextBox" Grid.Row="5" Margin="0,0,0,15" Height="30" Padding="5"/>

                    <TextBlock Grid.Row="6" Text="Şifre:" Margin="0,10,0,5" FontWeight="Bold"/>
                    <PasswordBox x:Name="DbPasswordBox" Grid.Row="7" Margin="0,0,0,15" Height="30" Padding="5"/>
                </Grid>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="SaveButton" Content="Kaydet" Width="100" Height="35" Margin="0,0,10,0" Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="İptal" Width="100" Height="35" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

