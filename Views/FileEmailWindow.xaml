<Window x:Class="CommunicationApp.Views.FileEmailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:CommunicationApp.Converters"
        Title="Dosyayı Mail Olarak Gönder" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:BoolToBackgroundConverter x:Key="BoolToBackgroundConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Kullanıcı Listesi -->
        <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Kullanıcılar"
                           FontWeight="Bold" FontSize="16"
                           Padding="10" Background="LightBlue"/>

                <ListBox x:Name="UsersListBox" Grid.Row="1"
                         SelectionChanged="UsersListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <Ellipse Width="10" Height="10"
                                         Fill="{Binding IsOnline, Converter={StaticResource BoolToColorConverter}}"
                                         Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Username}" FontWeight="Bold"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- Mail ile Dosya Gönderme Alanı -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Seçili Kullanıcı -->
            <Border Grid.Row="0" Background="LightGray" Padding="10" Margin="0,0,0,10">
                <TextBlock x:Name="SelectedUserTextBlock"
                           Text="Bir kullanıcı seçin"
                           FontWeight="Bold" FontSize="14"/>
            </Border>

            <!-- Form Alanı -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="0,0,10,0">
                    <TextBlock Text="E-posta Adresi" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="EmailTextBox" Height="30" Padding="5" />

                    <TextBlock Text="Konu (isteğe bağlı)" FontWeight="Bold" Margin="0,15,0,5"/>
                    <TextBox x:Name="SubjectTextBox" Height="30" Padding="5" />

                    <TextBlock Text="Mesaj (isteğe bağlı)" FontWeight="Bold" Margin="0,15,0,5"/>
                    <TextBox x:Name="BodyTextBox" Height="90" Padding="5" TextWrapping="Wrap" AcceptsReturn="True"/>

                    <TextBlock Text="Dosya" FontWeight="Bold" Margin="0,15,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="SelectFileButton"
                                Content="Dosya Seç..."
                                Width="100" Height="30"
                                Click="SelectFileButton_Click"/>
                        <TextBlock x:Name="SelectedFileTextBlock"
                                   Text="Henüz dosya seçilmedi"
                                   Margin="10,5,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Gönder Butonu ve Durum -->
            <Grid Grid.Row="2" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusTextBlock"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Foreground="DarkGreen"
                           Visibility="Collapsed"/>

                <Button x:Name="SendEmailButton"
                        Grid.Column="1"
                        Content="Dosyayı Mail Olarak Gönder"
                        Width="200" Height="35"
                        Click="SendEmailButton_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>


